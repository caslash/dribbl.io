generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma-nba"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("NBA_DATABASE_URL")
}

model Player {
  id                 Int               @id(map: "idx_16392_player_pkey")
  first_name         String?           @db.VarChar
  last_name          String?           @db.VarChar
  display_first_last String?           @db.VarChar
  birthdate          DateTime?         @db.Timestamp(6)
  school             String?           @db.VarChar
  country            String?           @db.VarChar
  height             String?           @db.VarChar
  weight             Int?
  season_exp         Int?
  jersey             Int?
  position           String?           @db.VarChar
  team_history       String?           @db.VarChar
  is_active          Boolean?
  from_year          Int?
  to_year            Int?
  total_games_played Int?
  draft_round        String?           @db.VarChar
  draft_number       String?           @db.VarChar
  draft_year         String?           @db.VarChar
  career_ppg         Decimal?          @db.Decimal(5, 2)
  career_rpg         Decimal?          @db.Decimal(5, 2)
  career_apg         Decimal?          @db.Decimal(5, 2)
  player_accolades   player_accolades?

  @@map("player")
}

model player_accolades {
  player_id Int    @id(map: "idx_16397_player_accolades_pkey")
  /// [PlayerAccoladeList]
  accolades Json?
  player    Player @relation(fields: [player_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

